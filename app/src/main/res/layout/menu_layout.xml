<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_Activity">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_Activity"
    android:orientation="vertical"
    android:background="#161515">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:collapseColumns="0.1"
        android:layout_marginLeft="5dp">

        <TableRow
            >
            <ImageView
                android:background="@drawable/black_widow_icon"
                android:layout_width="200dp"
                android:layout_height="200dp" />
            <ImageView
                android:background="@drawable/capitain_marvel_icon"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
        </TableRow>



        <TableRow>
            <ImageView
                android:background="@drawable/capitao_america_icon"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <ImageView
                android:background="@drawable/hulk_icon"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
        </TableRow>



        <TableRow>
            <ImageView
                android:background="@drawable/iron_man_icon"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <ImageView
                android:background="@drawable/venom_icon"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
        </TableRow>


        <TableRow>
            <ImageView
                android:background="@drawable/thanos"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <ImageView
                android:background="@drawable/thor"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
        </TableRow>


    </TableLayout>

</LinearLayout>
</ScrollView>